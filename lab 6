zad 4

select nazwa, idKreatury, nazwa, idKreatury from kreatura;
select k1.nazwa, k2.nazwa from kreatura k1
inner join kreatura k2 on k.idKreatury-k2.idKreatury=5;
inter join zasob z on e.idZasobu=z.idZasobu;
where z.rodzaj='jedzenie' order by k.dataUr desc limit 5;

zad 5

select k.rodzaj, sum(e.ilosc), avg(e.ilosc*z.waga)
from kreatura k
inner join ekwipunek e on k.idKreatury=e.idKreatury
inner join zasob z on e.id.Zasob=z.id Zasob
where k.rodzaj not in ('malpa','waz') and e.ilosc < 30
group by k.rodzaj

zad 5.2 
select * from kreatura k, 
(select rodzaj, min(dataUr) as min, max(dataUr) as max from kreatura, group by rodzaj) as pod
where k.dataUr=pod.min;
